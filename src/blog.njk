---
title: Blog
layout: blogList.njk
pageType: blogIndex
heroImg: false
pagination:
  data: collections.post
  size: 2
  alias: posts
  reverse: true
permalink: /blog/{% if pagination.pageNumber > 0 %}{{ pagination.pageNumber + 1 }}/{% endif %}index.html
---
<h1>Blog</h1>
<div id="wadah-artikel">
    {%- for post in posts -%}
        <article>
            {{ post.data.category }} >
            <h3>
                <a href="{{ post.url }}" title="{{ post.data.title }}">
                    {{ post.data.title }}
                </a>
            </h3>
            
            {{ post.date | postDate }}
            <p>
                by <a href="{{ post.data.authorLink }}">{{ post.data.author }}</a>
            </p>
            <p>
                {{ post.data.description }}
            </p>
        </article>
    {%- endfor -%}
    <hr>
</div>

{% if pagination.href.previous or pagination.href.next %}
    <div id="lalaman">
        {% if pagination.href.previous %}
            <a href=" {{ pagination.href.previous }}">Previous</a>
        {% endif %} 
        
        {% if pagination.href.previous and pagination.href.next %}
            / 
        {% endif %} 
        
        {% if pagination.href.next %}
            <a href=" {{ pagination.href.next }}">Next</a>
        {% endif %}
    </div>
{% endif %} 