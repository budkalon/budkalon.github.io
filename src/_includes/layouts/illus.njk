---
layout: layouts/base.njk
pageCollective: single
---
<article class="{{ pageCollective }}">
    <nav id="breadcrumb">
      <a href="/">Home</a> / 
      <a href="/works">Works</a> / 
      <a href="/works/illustration">Illustrations</a> /
    </nav>
    <div id="tayangan-ilus">
        <div id="ilus-thumb">
            <img src="{{ thumb }}" alt="">
        </div>
        <div id="ilus-desc">
            <h1>{{ title }}</h1>
            <p class="deskripsinya">
                {{ description }}
            </p>
            <hr>
            {{ content | safe }}
        </div>
    </div>
    <div id="info-ilus">
        <h2>Details</h2>
        <ul>
            <li>
                <span class="tanda">
                    by
                </span>
                <span class="isi">
                    {{ author }}
                </span>
            </li>
            <li>
                <span class="tanda">
                    dimension
                </span>
                <span class="isi">
                    {{ dimension }} ({{width}}x{{height}} {{sizeUnit}})
                </span>
            </li>
            <li>
                <span class="tanda">
                    created
                </span>
                <span class="isi">
                    {{ date }}
                </span>
            </li>
            <li>
                <span class="tanda">
                    media
                </span>
                <span class="isi">
                    {{ media }}
                </span>
            </li>
        </ul>
    </div>

</article>
        
        