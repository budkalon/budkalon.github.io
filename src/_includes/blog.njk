---
layout: base.njk
---
<main id="awaktama">
  <article>
    <div id="intro-blog">
      <nav id="breadcrumb">
        <a href="/blog">Blog</a> / <a href="/blog/category/{{ categories }}">{{ categories }}</a> /
      </nav>
      <h2>
        {{ title }}
      </h2>
      <div id="awalan">
        <li>
          <span class="judul-tanda">by</span> 
          <span class="isi-tanda">
            <a href="{{ authorLink }}">{{ author }}</a>
          </span>
        </li>
        <li>
          <span class="judul-tanda">in</span> 
          <span class="isi-tanda">
            <time datetime="{{ date }}">{{ date | postDate }}</time>
          </span>
        </li>
        <li>
          <span class="judul-tanda">on</span> 
          <span class="isi-tanda">
            {%- for cat in labels -%}
              <span class="isi-label">
                #{{ cat }} 
              </span>
            {%- endfor %}
          </span>
        </li>
      </div>
      <p id="deskripsitama">
        {{ description }}
      </p>
    </div>
    <div id="keluku">
      <img src="" alt="">
    </div>
  
    <div id="wadah-blog">
      {{ content | safe }}
    </div>
  </article>
</main>