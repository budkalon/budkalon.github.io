{% macro larink(linkHref, text='link') %}
    <li class="navan"><a title="{{ text }}" href="{{ linkHref }}">{{ text }}</a></li>
{% endmacro %}

<!--GALERI-->
{% macro galeri(linkHref, linkTitle, imgSrc, imgAlt, imgCap, imgDesc) %}
    <li class="keluku">
        <a href="{{ linkHref }}" title="{{ linkTitle }}">
            <div class="wadah-img">
                <img src="{{ imgSrc }}" alt="{{ imgAlt }}">
            </div>
            <div class="wadah-takarir">
                <p class="hulu-taka">
                    {{ imgCap }}
                </p>
                <p>
                    {{ imgDesc }}
                </p>
            </div>
        </a>
    </li>
{% endmacro %}




