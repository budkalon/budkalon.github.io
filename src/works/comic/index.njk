---
layout: base.njk
---
<ul>
    {%- for post in collections.comic -%}
        <li>
            <article>
                <a href="{{ post.url }}" title="{{ post.data.title }}">
                    <h3>{{ post.data.title }}</h3>
                </a>
                
                <p>
                    by <a href="{{ post.data.authorLink }}">{{ post.data.author }}</a>
                </p>
                <p>
                    {{ post.data.description }}
                </p>
            </article>
        </li>
    {%- endfor -%}
    
    </ul>