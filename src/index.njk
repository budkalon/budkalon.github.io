---
layout: layouts/base.njk
title: Budkalon's Site
pageType: home
heroImg: false
pageCollective: multiple
---
{% from "macro/list.njk" import larink %}
{% from "macro/list.njk" import galeri %}

<section id="beungeut">
    <div id="calawakan" class="kokolom">
        <div class="kolom kiri">
            <div id="kumenal">
                <h1>{{ data.author.name }}</h1>
                <p class="kecil">/{{ data.author.ipa }}/</p>
                <p>A comic artist who loves Nusantara cultures and spend too much time on doing worldbuilding, conlanging, and illustration.</p>
                <ul class="totombol vertikal">
                    <li class="tombolan">
                        <a title="my works" href="#catang">Works</a>
                    </li>
                    <li class="tombolan">
                        <a title="my VGen page" href="https://vgen.co/budkalon" target="_blank">Commission</a>
                    </li>
                </ul>
            </div>
            <div id="kumeklik">                    
                <ul class="totombol">
                    {% for link in data.author.socmed %}
                        <li class="tombolan">
                            <a  title="contact me on my {{ link.text }}" target="{{ link.target }}" href="{{ link.href }}">
                                {{ link.text }}
                            </a>
                        </li>
                    {% endfor %}
                </ul>
            </div>
        </div>
        <div class="kolom kanan kosong">
            [alla]
        </div>
    </div>
</section>

<section id="catang">
    <nav id="catanghulu">
        <ul class="totombol">
            <li class="tombolan"><a href="#gawe-komik">Comic</a></li>
            <li class="tombolan"><a href="#gawe-gambar">Illustration</a></li>
            <li class="tombolan"><a href="#gawe-cipbun">Worldbuilding</a></li>
        </ul>
    </nav>
    <div id="catangisi">
        <div id="gawe-komik" class="gawe-hareup">
            <div class="info-gawe">
                <h2>Comic</h2>
                {% include "parts/gawe/comic.njk" %}
            </div>               
            <div class="galeri-gawe galeri">
                <ul class="galeri sama sizeA4 port">
                    {%- for wadah in collections.comic %}
                        {%- if loop.index <= 5 -%}
                            {{ galeri(
                                linkHref = wadah.url,
                                linkTitle = wadah.data.title,
                                imgSrc = wadah.data.thumb,
                                imgAlt = wadah.data.imgDesc,
                                imgCap = wadah.data.title,
                                imgDesc = wadah.data.imgDesc
                            ) }}
                        {%- endif -%}
                    {%- endfor -%}
                    <li class="keluku more-link">
                        <a href="/works/comic" title="More comic works">
                            <p>
                                More Comics
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="gawe-gambar" class="gawe-hareup">
            <div class="info-gawe">
                <h2>Illustration</h2>
                {% include "parts/gawe/illustration.njk" %}
            </div>
            <div class="galeri-gawe galeri">
                <ul class="galeri">
                    {%- for wadah in collections.illus %}
                        {%- if loop.index <= 7 -%}
                            {{ galeri(
                                linkHref = wadah.url,
                                linkTitle = wadah.data.title,
                                imgSrc = wadah.data.thumb,
                                imgAlt = wadah.data.imgDesc,
                                imgCap = wadah.data.title,
                                imgDesc = wadah.data.imgDesc
                            ) }}
                        {%- endif -%}
                    {%- endfor -%}
                    
                    <li class="keluku more-link">
                        <a href="/works/illustration" title="More illustration works">
                            <p>
                                More Illustrations
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
        <div id="gawe-cipbun" class="gawe-hareup">
            <div class="info-gawe">
                <h2>Worldbuilding</h2>
                {% include "parts/gawe/worldbuilding.njk" %}
            </div>
            <div class="galeri-gawe galeri">
                <ul class="galeri size16-19">
                    {%- for wadah in collections.wb %}
                        {%- if loop.index <= 5 -%}
                            {{ galeri(
                                linkHref = wadah.url,
                                linkTitle = wadah.data.title,
                                imgSrc = wadah.data.thumb,
                                imgAlt = wadah.data.imgDesc,
                                imgCap = wadah.data.title,
                                imgDesc = wadah.data.imgDesc
                            ) }}
                        {%- endif -%}
                    {%- endfor -%}
                    <li class="keluku more-link">
                        <a href="/works/worldbuilding" title="More Worldbuilding works">
                            <p>
                                More Worldbuilding
                            </p>
                        </a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</section>

<nav id="nav-akhir">
    <ul>
        <li><a href="#">Back to top</a></li>
        <li><a href="https://vgen.co/budkalon">Commission Me</a></li>
    </ul>
</nav>